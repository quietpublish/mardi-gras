{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go vet:*)",
      "Bash(go fmt:*)",
      "Bash(go mod:*)",
      "Bash(go list:*)",
      "Bash(go run:*)",
      "Bash(gofmt:*)",
      "Bash(golangci-lint:*)",
      "Bash(make:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(bd:*)",
      "Bash(mandoc:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:pkg.go.dev)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  }
}
